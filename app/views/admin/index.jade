extends ../layout

block content
  .container
    .row: .col-xs-12.col-md-offset-2.col-md-10: h1 Login
    .row: .col-xs-12
      form.form-horizontal(action="/login" method="post")
        .form-group
          label.col-md-2.control-label Username/Email
          .col-md-10: input.form-control(type="text" name="username")          
        .form-group
          label.col-md-2.control-label Password
          .col-md-10: input.form-control(type="password" name="password")
        .form-group
          .col-md-offset-2.col-md-1
            input.btn-block.btn.btn-primary(type="submit" value="Login")
